{
  "name": "mile",
  "version": "1.0.0",
  "description": "The Last Mile - Convert API specs into fully developed experiences",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec ts-node src/index.ts",
    "dev:frontend": "cd frontend && npm start",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "start": "node dist/index.js"
  },
  "keywords": ["api", "openapi", "swagger", "experience-generator", "ui-generator"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "swagger-parser": "^10.0.3",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  }
}
